doctype html

html
  header 
     include ./Flat/navbar.jade
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', href='assets/css/bootstrap.css')
    // Website CSS style
    link(rel='stylesheet', type='text/css', href='assets/css/main.css')
    // Website Font style
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css')
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Passion+One', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Oxygen', rel='stylesheet', type='text/css')
    title Admin
  body
   .well
     .container
       .row.main
         .panel-heading
           .panel-title.text-center
             h1.title Sign up a new account
             hr
         .main-login.main-center
           .col-sm-6.col-md-4.col-md-offset-4
             form.form-horizontal(class= 'form-signup',name= 'signup',method='POST', action='/signup')
               .form-group
                 label.cols-sm-2.control-label(for='name') Your Name
                 .cols-sm-10
                   .input-group
                     span.input-group-addon
                       i.fa.fa-user.fa(aria-hidden='true')
                     input#name.form-control(type='text', name='name', value='',placeholder='Enter your Name',required)
               .form-group
                 label.cols-sm-2.control-label(for='email') Your Email
                 .cols-sm-10
                   .input-group
                     span.input-group-addon
                       i.fa.fa-envelope.fa(aria-hidden='true')
                     input#email.form-control(type='text', name='email', placeholder='Enter your Email',value='',required)
               .form-group
                 label.cols-sm-2.control-label(for='username') Username
                 .cols-sm-10
                   .input-group
                     span.input-group-addon
                       i.fa.fa-users.fa(aria-hidden='true')
                     input#username.form-control(type='text', name='username', placeholder='Enter your Username',value='',required)
               .form-group
                 label.cols-sm-2.control-label(for='password') Password
                 .cols-sm-10
                   .input-group
                     span.input-group-addon
                       i.fa.fa-lock.fa-lg(aria-hidden='true')
                     input#password.form-control(type='password', name="unhashed_password",pattern=".{6,}", placeholder='Enter your Password',value='',required)
               .form-group
                 label.cols-sm-2.control-label(for='confirm') Confirm Password
                 .cols-sm-10
                   .input-group
                     span.input-group-addon
                       i.fa.fa-lock.fa-lg(aria-hidden='true')
                     input#confirm.form-control(type='password', name='confirm_user_password', pattern=".{6,}",placeholder='Confirm your Password')
               .form-group
                 button.btn.btn-primary.btn-lg.btn-block.login-button(type='submit') Register
               .login-register
                 a(href='index.php') Login
     script(type='text/javascript', src='assets/js/bootstrap.js')

doctype html

html
  header 
  .container
     include ./bootstrap_lli/navbar.jade
  .container
    .col-md-5.toppad.pull-right.col-md-offset-3
        .panel.panel-primary
          
          .panel-heading Seach results
          .panel-body.fixed-panel
              .list-group
                each result in results
                 ul
                    a( href="/users/"+result.username )
                      li.list-group-item
                        .col-xs-12.col-sm-3
                          img.img-circle(src="#{result.user_profile_photo}", width='45', height='45')
                        .col-xs-12.col-sm-9
                          span.name #{result.username}
                          br
                        span.fa.fa-comments.text-muted.c-info(data-toggle='tooltip', title='scott.stevens@example.com')
                          span.visible-xs
                            span.text-muted scott.stevens@example.com
                            br
                        .clearfix

              
        


 
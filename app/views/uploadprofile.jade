include ./home/mixins
include ./Flat/navbar.jade
header
    link(href='/Flat-UI/dist/css/vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    // Loading Flat UI
    link(href='/Flat-UI/dist/css/flat-ui.css', rel='stylesheet')
    link(href='/Flat-UI/docs/assets/css/demo.css', rel='stylesheet')
    link(rel='shortcut icon', href='img/favicon.ico')
    style. 
          /* layout.css Style */
          .upload-drop-zone {
            height: 200px;
            border-width: 2px;
            margin-bottom: 20px;
          }

          /* skin.css Style*/
          .upload-drop-zone {
            color: #ccc;
            border-style: dashed;
            border-color: #ccc;
            line-height: 200px;
            text-align: center
          }
          .upload-drop-zone.drop {
            color: #222;
            border-color: #222;
          }


body
 .container
      .panel.panel-default
        .panel-heading
          strong Upload Files
          small 
        .panel-body
          // Standar Form
          h4 Select photo from your computer
          form#js-upload-form(action='/account/uploadprofile', method='post', enctype='multipart/form-data')
           #dropzonePreview
            .form-inline
              .form-group
                input#js-upload-files(type='file', name='profile_photo', value= '', required)
              button#js-upload-submit.btn.btn-sm.btn-primary(type='submit') Upload files

